<div class="notes">
  <span class="mark">*</span> 印の付いた項目は入力必須です。
</div>
<div>
  <%= f.label :email, "メールアドレス", class: "required" %>
  <%= f.email_field :email, required: true %>
</div>
<% if f.object.new_record? %>
  <div>
    <%= f.label :password, "パスワード", class: "required" %>
    <%= f.password_field :password, required: true %>
  </div>
<% end %>
<div>
  <%= f.label :family_name, "氏名", class: "required" %>
  <%= f.text_field :family_name, placeholder: "姓", required: true %>
  <%= f.text_field :given_name, placeholder: "名", required: true %>
</div>
<div>
  <%= f.label :family_name_kanna, "フリガナ", class: "required" %>
  <%= f.text_field :family_name_kana, placeholder: "姓フリガナ", required: true %>
  <%= f.text_field :given_name_kana, placeholder: "名フリガナ", required: true %>
</div>
<div>
  <%= f.label :start_date, "入社日", class: "required" %>
  <%= f.date_field :start_date, required: true %>
</div>
<div>
  <%= f.label :end_date, "退職日" %>
  <%= f.date_field :end_date %>
</div>
<div>
  <div class="check-boxes">
    <%= f.check_box :suspended %>
    <%= f.label :suspended, "アカウント停止" %>
  </div>
</div>
